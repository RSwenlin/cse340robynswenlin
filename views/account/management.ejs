<% if (title) { %>
    <h1><%= title %></h1>
<% } else { %>
    <h1>Account Management</h1>
<% } %>

<%- messages() %>


<% if (loggedin) { %>

    
    <% if (accountData.account_type === 'Client') { %>
        <h2 id='welcome-h2'>Welcome <%= accountData.account_firstname %></h2>
    <% } else if (accountData.account_type === 'Employee' || accountData.account_type === 'Admin') { %>
        <h2 id="welcome-h2">Welcome <%= accountData.account_firstname %></h2>
        <h3>Inventory Management</h3>
        <p><a href="/inv/management">Access Inventory Management</a></p>
    <% } %>

    <!-- Always show the "Update Account Information" link -->
    <p><a href="/account/update/<%= accountData.account_id %>">Update Account Information</a></p>

    <!-- Other account details -->
    <p>Email: <%= accountData.account_email %></p>

    

<% } else { %>
    <p>You need to be logged in to view your account management page.</p>
    <a href="/account/login">Login</a>
<% } %>
