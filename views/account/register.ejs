<div id="registerContainer">
    <h1><%= title %></h1>
    <%- messages() %>
    <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
      <% } %>
    
    <p>All fields are required.</p>
<form id="registerForm" action="/account/register" method="post">
  <fieldset>
    <label for="firstname">First name:</label>
    <input type="text" name="account_firstname" id="firstname" size="10" required>
    
    <label for="lastname">Last name:</label>
    <input type="text" name="account_lastname" id="lastname" required>
    
    <label for="email">Email Address:</label>
    <input type="email" name="account_email" id="email" required>
    
    <label for="password">Password:</label>
    <input type="password" name="account_password" id="password" required 
      pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
    <div><i>Passwords must be minimum of 12 characters and include 1 capital letter, 1 number and 1 special character.</i></div>
    
    <div id="pswdBtn">Show Password</div>
    <button type="submit">Register</button>
  </fieldset>
</form>



<p>Already have an account? <a href="/account/login">Login here</a></p>
</div>

<script src="/js/script.js"></script> <!-- Link to your JavaScript file if you have one -->
</div>