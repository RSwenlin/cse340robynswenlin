<nav>
    <%- nav %> <!-- Dynamic Navigation -->
  </nav>
</header>

<main>
  <h1>Add New Inventory Item</h1>

  <!-- Flash Messages -->
  <% if (messages) { %>
    <div class="flash-message">
      <%= messages %>
    </div>
  <% } %>

  <form action="/inv/add-inventory" method="POST" class="inventory-form">
    <!-- Vehicle Make -->
    <label for="vehicle_make">Make:</label>
    <input 
      type="text" 
      name="inv_make" 
      id="inv_make" 
      value="<%= inv_make || '' %>" 
      required 
      placeholder="e.g., Toyota"
    >

    <!-- Inv Model -->
    <label for="inv_model">Model:</label>
    <input 
      type="text" 
      name="inv_model" 
      id="inv_model" 
      value="<%= vehicle_model || '' %>" 
      required 
      placeholder="e.g., Corolla"
    >

    <!-- Inv Year -->
    <label for="inv_year">Year:</label>
    <input 
      type="number" 
      name="inv_year" 
      id="inv_year" 
      value="<%= inv_year || '' %>" 
      required 
      min="1900" 
      max="2100"
      placeholder="e.g., 2024"
    >

    <!-- Classification Dropdown -->
    <label for="classification_id">Classification:</label>
    <%= classificationList %> <!-- Dynamically generated dropdown -->

    <!-- Inv Price -->
    <label for="vehicle_price">Price:</label>
    <input 
      type="number" 
      name="inv_price" 
      id="inv_price" 
      step="0.01" 
      value="<%= inv_price || '' %>" 
      required 
      placeholder="e.g., 25000.99"
    >

    <!-- Vehicle Mileage -->
    <label for="vehicle_miles">Mileage:</label>
    <input 
      type="number" 
      name="vehicle_miles" 
      id="vehicle_miles" 
      value="<%= vehicle_miles || '' %>" 
      required 
      min="0"
      placeholder="e.g., 10000"
    >

    <!-- Vehicle Description -->
    <label for="vehicle_description">Description:</label>
    <textarea 
      name="vehicle_description" 
      id="vehicle_description" 
      required 
      placeholder="Describe the vehicle"
    ><%= vehicle_description || '' %></textarea>

    <!-- Vehicle Color -->
    <label for="vehicle_color">Color:</label>
    <input 
      type="text" 
      name="vehicle_color" 
      id="vehicle_color" 
      value="<%= vehicle_color || '' %>" 
      required 
      placeholder="e.g., Red"
    >

    <!-- Vehicle Image URL -->
    <label for="vehicle_image">Image URL:</label>
    <input 
      type="url" 
      name="vehicle_image" 
      id="vehicle_image" 
      value="<%= vehicle_image || '' %>" 
      required 
      placeholder="e.g., https://example.com/car.jpg"
    >

    <!-- Submit Button -->
    <button type="submit" class="btn-submit">Add Vehicle</button>

    <input type="hidden" name="inv_id"
<% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
<% } %>>

  </form>
</main>
