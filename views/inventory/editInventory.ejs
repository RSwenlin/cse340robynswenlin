<nav>
    <%- nav %> <!-- Dynamic Navigation -->
  </nav>
</header>

<main>
  <h1>Edit Inventory</h1>

  <!-- Flash Messages -->
  <% if (messages) { %>
    <div class="flash-message">
      <%= messages %>
    </div>
  <% } %>

  <form action="/inv/edit-inventory" method="POST" class="inventory-edit">
    <!-- Vehicle Make -->
    <label for="inv_make">Make:</label>
    <input 
      type="text" 
      name="inv_make" 
      id="inv_make" 
      value="<%= inv_make || '' %>" 
      required 
      placeholder="e.g., Toyota"
    >

    <!-- Vehicle Model -->
    <label for="inv_model">Model:</label>
    <input 
      type="text" 
      name="inv_model" 
      id="inv_model" 
      value="<%= inv_model || '' %>" 
      required 
      placeholder="e.g., Corolla"
    >

    <!-- Vehicle Year -->
    <label for="inv_year">Year:</label>
    <input 
      type="number" 
      name="inv_year" 
      id="inv_year" 
      value="<%= inv_year || '' %>" 
      required 
      min="1900" 
      max="2100"
      placeholder="e.g., 2024"
    >

    <!-- Classification Dropdown -->
    <label for="classification_id">Classification:</label>
    <%= classificationList %> <!-- Dynamically generated dropdown -->

    <!-- Vehicle Price -->
    <label for="inv_price">Price:</label>
    <input 
      type="number" 
      name="inv_price" 
      id="inv_price" 
      step="0.01" 
      value="<%= inv_price || '' %>" 
      required 
      placeholder="e.g., 25000.99"
    >

    <!-- Vehicle Mileage -->
    <label for="inv_miles">Mileage:</label>
    <input 
      type="number" 
      name="inv_miles" 
      id="inv_miles" 
      value="<%= inv_miles || '' %>" 
      required 
      min="0"
      placeholder="e.g., 10000"
    >

    <!-- Vehicle Description -->
    <label for="inv_description">Description:</label>
    <textarea 
      name="inv_description" 
      id="inv_description" 
      required 
      placeholder="Describe the vehicle"
    ><%= inv_description || '' %></textarea>

    <!-- Vehicle Color -->
    <label for="inv_color">Color:</label>
    <input 
      type="text" 
      name="inv_color" 
      id="inv_color" 
      value="<%= inv_color || '' %>" 
      required 
      placeholder="e.g., Red"
    >

    <!-- Vehicle Image URL -->
    <label for="inv_image">Image URL:</label>
    <input 
      type="url" 
      name="inv_image" 
      id="inv_image" 
      value="<%= inv_image || '' %>" 
      required 
      placeholder="e.g., https://example.com/car.jpg"
    >

    <!-- Submit Button -->
    <button type="submit" class="btn-submit">Add Vehicle</button>

    <input type="hidden" name="inv_id"
<% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
<% } %>>

  </form>