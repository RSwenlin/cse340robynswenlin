
<h1>Inventory Management</h1>

<% if (messages && messages.length) { %>
  <ul>
    <% messages.forEach(function(message) { %>
      <li><%= message %></li>
    <% }) %>
  </ul>
<% } %>

<ul>
  <li><a href="/inv/add-classification">Add New Classification</a></li>
  <li><a href="/inv/add-inventory">Add New Inventory Item</a></li>
</ul>

<h2>Manage Inventory</h2>

<p>Select a classification from the list to view the items belonging to that classification:</p>

<!-- Classification list dropdown -->
<select id="classificationSelect">
  <option value="">-- Select a Classification --</option>
  <% classificationSelect.forEach(function(classification) { %>
    <option value="<%= classification.classification_id %>"><%= classification.classification_name %></option>
  <% }) %>
</select>

<!-- Empty table for inventory items -->
<table id="inventoryDisplay"></table>

